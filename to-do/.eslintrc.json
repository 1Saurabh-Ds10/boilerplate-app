{
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "linebreak-style": ["error", "windows"],
    "comma-dangle": 0,
    "object-curly-spacing": 0,
    "arrow-body-style": 0,
    "no-else-return": 0,
    "arrow-parens": 0,
    "react/jsx-filename-extension": 0
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "jest": true,
    "node": true,
    "serviceworker": true,
    "worker": true,
    "webextensions": true
  },
  "globals": {
    "DEBUG": false
  }

}